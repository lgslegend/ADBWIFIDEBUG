<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity" android:layout_gravity="center">
    <include layout="@layout/toolbar" android:id="@+id/layout_toolbar"/>
    <LinearLayout
            android:layout_below="@+id/layout_toolbar"
            android:id="@+id/ll_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_now_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_gravity="right"
                android:id="@+id/tv_is_root"
                android:text=""
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_below="@id/ll_title_bar"
            android:id="@+id/ll_fun"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageButton
                android:padding="5dp"
                android:id="@+id/btn_open_adb"
                android:text="@string/string_btn_open_abd_open"
                android:layout_width="128dp"
                android:gravity="center"
                android:layout_height="128dp"
        />
        <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_adb_status"
                android:text="@string/string_tv_adb_status_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_ip_address"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_sharp_btn_copy"
                android:id="@+id/btn_copy_ip_address"
                android:text="@string/string_btn_copy_ip_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_tips"
            android:layout_marginTop="20dp"
            android:layout_below="@id/ll_fun"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/gray"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="温馨提示"
                android:textColor="@color/black"
                android:textSize="40px"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/gray"/>
    </LinearLayout>
    <LinearLayout
            android:layout_below="@id/ll_tips"
            android:id="@+id/ll_tips_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView android:layout_width="@dimen/space_350"
                  android:text="@string/string_tv_tips"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>